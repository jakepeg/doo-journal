{
  "name": "journal",
  "type": "module",
  "workspaces": [
    "src/journal_frontend"
  ],
"scripts": {
  "dev": "npm run dev --workspace journal_frontend",
  "start": "npm run start --workspaces --if-present",
  "build": "npm run build --workspaces --if-present",
  "prebuild": "npm run prebuild --workspaces --if-present",
  "deploy": "node scripts/build-backend.js && dfx deploy && node scripts/restore-backend.js",
  "deploy:ic": "node scripts/deploy-mainnet.js",
  "update-env": "node scripts/update-env.js --force",
  "test:encryption": "node scripts/test-encryption.js"
},
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.5.2"
  }
}
